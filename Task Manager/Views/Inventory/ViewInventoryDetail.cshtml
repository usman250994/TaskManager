@{
    ViewBag.Title = "ViewInventoryDetail";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Product Detail</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product View
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6 ">
                                    <label>Name</label>
                                </div>
                                <div class="col-lg-6 ">
                                    <label id="productname"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6 ">
                                    <label>Type</label>
                                </div>
                                <div class="col-lg-6 ">
                                    <label id="type"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6 ">
                                    <label>Catogrey</label>
                                </div>
                                <div class="col-lg-6 ">
                                    <label id="Catogrey"></label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>

                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Brand</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="brand"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Model</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="model"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Barcode</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="barcode"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Inward Date</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="inward"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Description</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="desc"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Quantity</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="quantity"></label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                            <div class="col-lg-12 spacing">
                                <div class="col-lg-6">
                                    <label>Vendor Name</label>
                                </div>
                                <div class="col-lg-6">
                                    <label id="vendor"> </label>
                                </div>
                                <p style=" border-bottom: 1px solid gray; position:relative;padding-bottom: 30px; "> </p>
                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <div class="col-lg-6">
            <div class="col-lg-offset-3 col-lg-6 spacing">
                <img src="~/Product Image/apple.jpg" alt="apple" style="width:304px;height:228px;" />
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/InventoryApi/' + 0,
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                if (data.islocal = true) {
                    var ty = "Local";
                }
                else {
                    var ty = "Imported";
                }
                document.getElementById('productname').innerHTML = data.product_name;
                document.getElementById('type').innerHTML = ty;
                document.getElementById('Catogrey').innerHTML = data.code;
                document.getElementById('brand').innerHTML = data.brand;
                document.getElementById('model').innerHTML = data.model;
                document.getElementById('barcode').innerHTML = data.barcode;
                document.getElementById('inward').innerHTML = data.inward_date.substring(0, 10);
                document.getElementById('desc').innerHTML = data.description;
                document.getElementById('quantity').innerHTML = data.quantity;
                document.getElementById('vendor').innerHTML = data.vendor_name;

            },
            error: function () { alert('Grid Not Load'); }
        });
    });



</script>