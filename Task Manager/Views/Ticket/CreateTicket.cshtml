<div id="wrapper">
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="text-align:center">Create Tickets</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row" ng-app="ticket">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Create Tickets
                    </div>
                    <div class="panel-body" ng-controller="tickctrl">
                        <div class="row">
                            <div class=" col-lg-offset-3 col-lg-6">
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Name</label>
                                        <input type="hidden" id="tick_id" value="0" />
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input type="hidden" id="cust_id" value="0" />
                                        <input class="form-control" type="text" value="{{task.task.task_name}}" >
                                    </div>
                                </div>

                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Customer Name</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <select name="repeatSelect" id="repeatSelect" ng-model="customerSelected">
                                            <option ng-repeat="customer in customers" value="{{customer.customerId}}">{{customer.name}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Project Name</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <select name="repeatSelect" id="repeatSelect" ng-model="projectSelected">
                                            <option ng-repeat="project in projects" value="{{project.id}}" ng-selected="5=={{project.id}}">{{project.projectName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Issue</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <textarea class="form-control" type="text" id="Desc" cols="22" rows="2"> {{task.task.description}}</textarea>
                                    </div>
                                </div>

                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Assigned To</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="dropdown">
                                            <multiple-autocomplete ng-model="selectedList"
                                                                   object-property="name"
                                                                   suggestions-arr="optionsList">
                                            </multiple-autocomplete>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Remind By</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="chkSMS"> SMS
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" id="chkEmail">  Email
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-offset-6 col-lg-6 spacing">
                                    <input type="button" class="btn btn-success" onclick="Add()" id="button" value="Create" />
                                    <input type="button" class="btn btn-info" value="Reset" onclick="location.reload();">
                                </div>

                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    </div>
    <!-- /#page-wrapper -->
</div>

