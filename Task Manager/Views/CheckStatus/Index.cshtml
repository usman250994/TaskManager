@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Nonuser.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Customer Ticket Detail

        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Ticket Number</th>
                        <th>Ticket Name</th>
                        <th>Ticket Description</th>
                        <th>Ticket Date</th>
                        <th>Ticket Status</th>
                    </tr>
                </thead>
                <tbody id="dynamic-Grid"></tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
<!-- /.row -->
<input action="action" onclick="history.go(-1);" type="button" value="Back"  class="btn btn-primary" id="back"/>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/CheckStatusApi/',
            type: 'POST',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    $("#dynamic-Grid").append("<tr><td>" + data[i].id + "</td><td>" + data[i].name + "</td><td>" + data[i].description + "</td><td>" + data[i].date.substring(0, 10) + "</td><td>" + data[i].status);
                }
            },
            error: function () { alert('Data Not Found'); }
        });
    });
</script>