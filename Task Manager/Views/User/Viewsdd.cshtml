@{
    ViewBag.Title = "Viewsdd";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<h2>Viewsdd</h2>








<script type="text/ng-template" id="quote.html">
    <div id="abc" class="modal fade" role="dialog" style="margin-left:500px; height:620px;">
        <div class="modal-header">
            <h4 class="modal-title" align="center">
                Send Quote
                <button type="button" class="close" ng-click="close('Cancel')" data-dismiss="modal" aria-hidden="true">&times;</button>
            </h4>
        </div>
        <div class="modal-body check-element animate-show-hide">
            <form ng-submit="sendQuote()" align="center">
                <div class="col-lg-12">
                    <div class="col-lg-6" style="padding-top:5px;">Customer Name</div>
                    <div class="col-lg-6"> <input type="text" ng-model="contact.name" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6">Email Address</div>
                    <div class="col-lg-6"> <input type="text" ng-model="contact.email" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6">Primary Contact Number</div>
                    <div class="col-lg-6"> <input type="text" ng-model="contact.number" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6">Secondary Contact Number</div>
                    <div class="col-lg-6">   <input type="text" ng-model="contact.number2" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6">Contact Address</div>
                    <div class="col-lg-6"> <input type="text" ng-model="contact.address" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6" style="padding-top:5px;">Service Interested In</div>
                    <div class="col-lg-6">  <input type="text" ng-model="contact.service" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6" style="padding-top:5px;">Quotation Amount</div>
                    <div class="col-lg-6"><input type="text" ng-model="contact.amount" style="height:35px;"></div>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6" style="padding-top:5px;">Message</div>
                    <div class="col-lg-6">   <textarea rows="4" cols="50" ng-model="contact.message"> </textarea></div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" ng-click="close('No')" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" ng-click="sendQuote()" class="btn btn-primary" data-dismiss="modal">Send</button>
        </div>
    </div>
</script>