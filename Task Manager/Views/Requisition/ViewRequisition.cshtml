@{
    if (ViewData["id"].ToString() == "1")
    {
        Layout = "~/Views/Shared/_Home.cshtml";
    }
    else if (ViewData["id"].ToString() == "2")
    {
        Layout = "~/Views/Shared/Admin.cshtml";
    }
    else if (ViewData["id"].ToString() == "3")
    {
        Layout = "~/Views/Shared/Normal.cshtml";
    }
    else if (ViewData["id"].ToString() == "4")
    {
        Layout = "~/Views/Shared/CSR.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/Procurement.cshtml";
    }
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Requisition Detail</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div align="center">
                @*<button class="btn btn-primary" onclick="statusWiseSort(0)">All</button>*@
                <button class="btn btn-info" onclick="status(1)">Request</button>
                <button class="btn btn-primary" onclick="status(2)">Approve</button>
                <button class="btn btn-success" onclick="status(3)">Issued</button>
                <button class="btn btn-warning" onclick="status(4)">Recived</button>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Requisition Detail
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-exampl" style="width: 100%!important">
                        <thead>
                            <tr>
                                <th>Serial No</th>
                                <th>Customer Name</th>
                                <th>Project Name</th>
                                <th>Item Name</th>
                                <th>Item Code</th>
                                <th>Units</th>
                                <th>Quantity</th>
                                <th>Date Required</th>
                                <th>Quantity Issued</th>
                                <th>Request Date</th>
                                <th>Created By</th>
                                <th>Approved By</th>
                                <th>Approved Date</th>
                                <th>Issued By</th>
                                <th>Issued Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="dynamic-Grid"></tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        <!-- /.row -->
    </div>
</div>
<script>

    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/RequisitionApi/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                filltable(data);
            },
            error: function () { alert('Requisition grid not working'); }
        });
    });
    function filltable(datas) {
        $("#dataTables-exampl").DataTable({
            "pageLength": 25,
            "aaData": datas,
            "aoColumns": [
                { "mDataProp": "serialNo" },
                { "mDataProp": "customerName" },
                { "mDataProp": "projectName" },
                { "mDataProp": "itemName" },
                { "mDataProp": "itemCode" },
                { "mDataProp": "units" },
                { "mDataProp": "requiredQuantity" },
                { "mDataProp": "requiredDate" },
                { "mDataProp": "issuedQuantity" },
                { "mDataProp": "createdDate" },
                { "mDataProp": "createdBy" },
                { "mDataProp": "approvedBy" },
                { "mDataProp": "approvedDate" },
                { "mDataProp": "issuedBy" },
                { "mDataProp": "issuedDate" },
                { "mDataProp": "action" }
            ]
        });
    }
    function deleteRequisition(id) {
        $.ajax({
            async: false,
            url: '/api/RequisitionApi/' + id,
            type: 'DELETE',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert('Requisition Deleted');
                location.reload();
            },
            error: function () { alert('Requisition Not Deleted'); }
        });
    }

</script>