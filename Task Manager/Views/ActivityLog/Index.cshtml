@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">View User</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Users Detail
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width: 100%!important">
                        <thead>
                            <tr>
                                <th>Action Name</th>
                                <th>Table Name</th>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Date</th>

                            </tr>
                        </thead>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        <!-- /.row -->
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        $.ajax({
            url: '/api/ActivityLogApi/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                filltable(data);
            },
            error: function () { alert('Grid Not Load'); }
        });
    });

    function filltable(datas) {
        $("#dataTables-example").DataTable({
            "aaSorting": [[4, 'desc']],
            "pageLength": 50,
            "aaData": datas,
            "aoColumns": [
                { "mDataProp": "actionName" },
                { "mDataProp": "tableName" },
                { "mDataProp": "Perform" },
                { "mDataProp": "User" },
                { "mDataProp": "Date" },
            ]
        });

    }
</script>