@{
    ViewBag.Title = "CreateProject";
    if (ViewData["id"].ToString() == "1")
    {
        Layout = "~/Views/Shared/_Home.cshtml";
    }
    else if (ViewData["id"].ToString() == "2")
    {
        Layout = "~/Views/Shared/Admin.cshtml";
    }
    else if (ViewData["id"].ToString() == "3")
    {
        Layout = "~/Views/Shared/Normal.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/CSR.cshtml";
    }
}
<div id="wrapper">
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="text-align:center">Create Project</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <form ng-submit>
            <div class="row" ng-app="project">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Create Project
                        </div>

                        <div class="panel-body" ng-controller="projectctrl">
                            <div class="row">
                                <div class=" col-lg-offset-3  col-lg-6">
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Customer Name</label> <input type="hidden" ng-model="task.id"></input>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <select ng-options="customer.id as customer.name for customer in customers" ng-model="task.customerId"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Project Name</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <input class="form-control" type="text" ng-model="task.Project_Name" required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Start Date</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <input class="form-control" type="date" ng-model="task.Start_Date" required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>End Date</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <input class="form-control ui-datepicker" type="date" ng-model="task.End_Date" required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Project Manager</label>
                                        </div>
                                        @*Usman added resco side project manager*@
                                        <div class="col-lg-6 ">
                                            <select ng-options="optionList.id as optionList.name for optionList in optionsList" ng-model="task.userId"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Customer Manager</label>
                                        </div>


                                        <div class="col-lg-6 ">
                                            <input class="form-control" type="text" ng-model="task.customerContactDetail.project_manager" required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Customer Contact Number</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <div class="col-lg-2"><label class="abc">+92</label></div>
                                            <div class="col-lg-10"><input class="form-control" type="text" ng-model="task.customerContactDetail.contact_number" placeholder="3401234567" required="required"></div>

                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Customer Email</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <input class="form-control" type="email" ng-model="task.customerContactDetail.email" placeholder="example@gmail.com" required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Customer Address</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <input class="form-control" type="text" ng-model="task.customerContactDetail.address" placeholder=" WA 98052-7329. " required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-offset-6 col-lg-6 spacing">
                                        <input type="submit" class="btn btn-success" value="Create/Update" />
                                        <input type="button" class="btn btn-info" value="Reset" onclick="location.reload();">
                                    </div>

                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
</form>
        <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
</div>

<script src="~/Scripts/angular.min.js"></script>
<script type="text/javascript">
   

    var app = angular.module("project", ['multipleSelect']);

    app.controller("projectctrl", function ($scope, $http) {

        $scope.message = $http.put('/api/ProjectApi/').then(function (response) {
            $scope.task = response.data;
            console.log($scope.task);
            $scope.task.Start_Date = new Date($scope.task.Start_Date);
            $scope.task.End_Date = new Date($scope.task.End_Date);
        });
        $scope.message = $http.get('/api/angularApi/' + 0).then(function (response) {
            $scope.customers = response.data;
            console.log($scope.customers);
        });

        $scope.message = $http.post('/api/angularApi/').then(function (response) {
            $scope.optionsList = response.data;
            console.log($scope.optionsList);
        });


        $scope.Add = function () {

            $scope.new = {};
            $scope.new.project_name = $scope.task.task.task_name;
            $scope.new.id = $scope.task.task.id;
            $scope.new.projectId = $scope.projectId;
            $scope.new.description = $scope.task.task.description;
            $scope.new.email = $scope.task.task.email;
            $scope.new.sms = $scope.task.task.sms;
            $scope.new.start_date = $scope.task.task.end_date;
            $scope.new.end_date = $scope.task.task.end_date;
            $scope.new.tempUsers = $scope.selectedList;

            console.log($scope.new);

            $scope.message = $http.post('/api/TaskApi/', $scope.new).then(function (response) {
                console.log(response.data);
                alert("Task Added Sucessfully");
            });

        }
    });



</script>

