                {
                    chatstyle(data[i]);
                }
                
            },
            error: function () { alert('Grid Not Load'); }
        });
    });
    function sendMessage() {

        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                console.log("cant access location using this browser !! :( sorry");
                location = "cant access location";
            }
        }
        function showPosition(position) {
            location = position.coords.latitude + "," + position.coords.longitude;
        }

      
        $.ajax({
            async: false,
            url: '/api/messageApi/',
            type: 'PUT',
            data: JSON.stringify(model),
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                if (data == 1) {

                    var model = {
                        message: document.getElementById("btn-input").value,
                        location: location,
                        initials: "ME",
                        Name: "ME"
                    };


                    chatstyle(model);
                    document.getElementById("btn-input").value = "";

                }
                else {
                    alert("Message could Not be Sent");
                }
            },
            error: function () { alert('Grid Not Load'); }
        });

    }
    function chatstyle(model) {
        console.log("sss" + model);
        
        //appending starts here
        var ul = document.getElementById("messageList");

        //fopr loop starts here
        // -------------------------------------------- Create HTML Attributes -----------------------------------------//
        var img = document.createElement('img');
        var li = document.createElement("li");
        var sp = document.createElement("span");
        var div = document.createElement("div");
        var div1 = document.createElement("div");
        var strong = document.createElement("strong");
        var small = document.createElement("small");
        var p = document.createElement("p");
        var span = document.createElement("span");
        // -------------------------------------------- Append HTML Attributes Class Name--------------------------------//
        li.className = "left clearfix";

        if (model.direction == "left")
            {
            sp.className = "chat-img pull-left";
        }
        else
        {
            sp.className = "chat-img pull-right";
        }

        img.src = "http://placehold.it/50/55C1E7/fff&text="+model.initials;
        img.className = "img-circle";
        div.className = "chat-body clearfix";
        div1.className = "header";
        strong.className = "primary-font";
        small.className = "pull-right text-muted";
        span.className = "glyphicon glyphicon-time";
        // -------------------------------------------- Append HTML Attributes -----------------------------------------//
        p.textContent = model.message;
        span.textContent = model.timeStamp;
        sp.appendChild(img);
        li.appendChild(sp);
        li.appendChild(div);
        ul.appendChild(li);
        div.appendChild(div1);
        div1.appendChild(strong);
        strong.appendChild(small);
        small.appendChild(span);
        div.appendChild(p);


    }
</script>
