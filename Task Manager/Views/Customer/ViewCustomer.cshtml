@{
    ViewBag.Title = "ViewCustomer";
    if (ViewData["id"].ToString() == "1")
    {
        Layout = "~/Views/Shared/_Home.cshtml";
    }
    else if (ViewData["id"].ToString() == "2")
    {
        Layout = "~/Views/Shared/Admin.cshtml";
    }
    else if (ViewData["id"].ToString() == "3")
    {
        Layout = "~/Views/Shared/Normal.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/CSR.cshtml";
    }
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Customer Detail</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Customer Detail
                    @*<button type="button" class="btn btn-primary" onclick="gridLoad()">Update</button>*@
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Customer Id</th>
                                <th>Customer Name</th>
                                <th>Address</th>
                                <th>Contact</th>
                                <th>Website</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="dynamic-Grid"></tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        <!-- /.row -->
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/CustomerApi/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                for (var i = 0; i < data.length; i++) {
                    $("#dynamic-Grid").append("<tr id="+i+"><td>" + data[i].customerId + "</td><td>" + data[i].customer_name + "</td><td>" + data[i].address + "</td><td>" + data[i].Phonenumber + "</td><td>" + data[i].Website + "</td><td>" + data[i].Email + "</td><td><button value='Update' class='btn btn-primary fa fa-cog' id='upd' onclick=\"preUpdate(" + data[i].customerId + ")\"></button> <button  class='btn btn-danger fa fa-times' onclick=\"deleteUser(" + data[i].customerId+","+i+")\"></button>");
                }

            },
            error: function () { alert('Data Not Showing'); }
        });
    });
    function deleteUser(id,rId) {
        if (confirm('Are you sure you want to save this thing into the database?')) {
            // Save it!

            $.ajax({
                url: '/api/CustomerApi/' + id,
                type: 'POST',
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    alert(data);


                    $('table#dataTables-example tr#' + rId).remove();
                },
                error: function (data) { alert(data); }
            });
        } else {
            // Do nothing!
        }
    }
    function preUpdate(id) {

        $.ajax({
            async: false,
            url: '/api/CustomerApi/' + id,
            type: 'PUT',
            success: function (data) {
                window.location.href = '/Customer/CreateCustomer';
            },
            error: function () {
                alert('User not Updated');
            }
        });
    }
</script>
