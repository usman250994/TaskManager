@{
    ViewBag.Title = "CreateTask";
    if (ViewData["id"].ToString() == "1")
    {
        Layout = "~/Views/Shared/_Home.cshtml";
    }
    else if (ViewData["id"].ToString() == "2")
    {
        Layout = "~/Views/Shared/Admin.cshtml";
    }
    else if (ViewData["id"].ToString() == "3")
    {
        Layout = "~/Views/Shared/Normal.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/CSR.cshtml";
    }
}
<div id="wrapper">
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="text-align:center">Create User</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Create User
                    </div>
                    <div class="panel-body">

                        <div class="row">
                            <div class=" col-lg-offset-3  col-lg-6">

                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>User Name</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" id="user_name" placeholder="User Name" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Password</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" type="password" id="password" placeholder="Password" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Address</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="text" id="Address" placeholder="Address">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Email Address</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="email" id="Email" placeholder="Example12@Gmail.com" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Mobile Number</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="col-lg-2"><label class="abc">+92</label></div>
                                        <div class="col-lg-10"><input class="form-control" type="number" id="MobileNo" placeholder="3001234567" required="required"></div>

                                        <label id="UpdID" type="text" name="UpdID"> </label>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Position</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <select id="Position"></select>
                                    </div>
                                </div>
                                <div class="col-lg-offset-6 col-lg-6 spacing">

                                    <input type="button" class="btn btn-success" onclick="Add()" id="button" value="Create" />
                                    <input type="button" class="btn btn-info" value="Reset" onclick="location.reload();">
                                </div>

                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>


                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<script type="text/javascript">



    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/UserApi/' + 0,
            type: 'POST',
            success: function (data) {

                $.each(data.roles, function (i) {
                    $('#Position').append($('<option></option>').val(data.roles[i].id).html(data.roles[i].role_name));
                });


                if (data.userview != null) {
                    document.getElementById("user_name").value = data.userview.name;
                    document.getElementById("password").value = data.userview.pasword;
                    document.getElementById("Address").value = data.userview.address;
                    document.getElementById("MobileNo").value = data.userview.contact.substring(3, 13);
                    document.getElementById("Email").value = data.userview.email;
                    document.getElementById("Position").value = data.userview.positionId;
                    document.getElementById("UpdID").value = data.userview.uId;
                    document.getElementById("button").value = "Update";
                }
            },
            error: function () {
                alert('Dropdown Position Not Loaded');
            }
        });

    });


    function Add() {
        var uname = document.getElementById("user_name").value.trim();
        var password = document.getElementById("password").value.trim();
        var pnumber = document.getElementById("MobileNo").value.trim();
        var email = document.getElementById("Email").value.trim();
        if (uname == "") { alert("Please enter User Name"); }
        else if (password == "") { alert("Please enter User Password"); }
        else if (validateEmail(email) == false) { alert('Please provide a valid email address'); email.focus; }
        else if (pnumber == "" || pnumber.length != 10) { alert("Please Enter Valid Phone Number"); }
        else
        {

            var model = { id: $("#id").val(), user_Name: $("#user_name").val(), Password: $("#password").val(), Address: $("#Address").val(), MobileNo: "+92" + $("#MobileNo").val(), Email: $("#Email").val(), CreatedOn: $("#date").val(), Enable: $("#enable").val(), id: $("#UpdID").val(), Roles_id: $("#Position").val() };
            console.log($("#Position").val() + "aasas");
            $.ajax({
                async: false,
                url: '/api/UserApi/',
                type: 'POST',
                data: JSON.stringify(model),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    alert(data);
                    window.location.href = '/User/ViewUser';

                },
                error: function () {
                    alert(data);
                }
            });
        }

    }
</script>