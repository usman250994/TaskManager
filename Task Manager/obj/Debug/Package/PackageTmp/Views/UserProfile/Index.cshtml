@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div id="wrapper">
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="text-align:center">Update Profile</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Update Profile
                    </div>
                    <div class="panel-body">

                        <div class="row">
                            <div class=" col-lg-offset-3  col-lg-6">

                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>User Name</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" id="user_name" disabled>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Old Password</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" type="password" id="oldpassword" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>New Password</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" type="password" id="newpassword" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Re-Type Password</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" type="password" id="re_password" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Address</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="text" id="Address" placeholder="Address">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Email Address</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <input class="form-control" type="email" id="Email" placeholder="Example12@Gmail.com" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Mobile Number</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="col-lg-2"><label class="abc">+92</label></div>
                                        <div class="col-lg-10"><input class="form-control" type="number" id="MobileNo" placeholder="3001234567" required="required"></div>

                                        <label id="UpdID" type="text" name="UpdID"> </label>
                                    </div>
                                </div>

                                <div class="col-lg-offset-6 col-lg-6 spacing">

                                    <input type="button" class="btn btn-success" onclick="Add()" id="button" value="Update" />
                                    <input type="button" class="btn btn-info" value="Reset" onclick="location.reload();">
                                </div>

                            </div>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>


                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>

<script>
    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/UserProfileApi/',
            type: 'GET',
            success: function (data) {
                console.log(data);
                document.getElementById("user_name").value = data.username;
                document.getElementById("MobileNo").value = data.number;
                document.getElementById("Email").value = data.email;
                document.getElementById("Address").value = data.address;

            },
            error: function () {
                alert('user Details Not Loaded');
            }
        });

    });





    function Add() {
        var oldPass = document.getElementById("oldpassword").value.trim();
        var newPass = document.getElementById("newpassword").value.trim();
        var rePass = document.getElementById("re_password").value.trim();
        var pnumber = document.getElementById("MobileNo").value.trim();
        var email = document.getElementById("Email").value.trim();
        if (oldPass == "" || newPass == "" || rePass == "") { alert("Please enter User Password"); }
        else if (validateEmail(email) == false) { alert('Please provide a valid email address'); email.focus; }
        else if (pnumber == "" || pnumber.length != 10) { alert("Please Enter Valid Phone Number"); }
        else
        {
            var model = { oldPass: $("#oldpassword").val(), newPass: $("#newpassword").val(), rePass: $("#re_password").val(), address: $("#Address").val(), number: "+92" + $("#MobileNo").val(), email: $("#Email").val() };
            $.ajax({
                async: false,
                url: '/api/UserProfileApi/',
                type: 'POST',
                data: JSON.stringify(model),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    alert(data);
                },
                error: function () {
                    alert(data);
                }
            });
        }

    }



</script>

