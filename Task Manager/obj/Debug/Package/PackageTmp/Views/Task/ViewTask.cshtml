                </div>
                <!-- /.col-lg-12 -->
            </div>


        </div>

    </div>
</div>

<script type=text/javascript>
    function status(value, user) {
        var model = { value: value, user: user };
        if (value == 0)
     
        {
            if (confirm('users wil be deleted from the task Are You sure?')) {
                // Save it!
                $.ajax({
                    async: false,
                    url: '/api/TaskApi/',
                    type: 'PUT',
                    data: model,
                    dataType: "json",
                    success: function (data) {
                        console.log(data);
                    },
                    error: function () { alert('Grid Not Load'); }
                });
            } else {
                return;
            }
    }
       
    }
    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/TaskApi/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                filltable(data);
            },
            error: function () {
                alert('Grid Not Load');
            }
        });
    });
    function filltable(datas) {
        $("#dataTables-example").DataTable({
            "aaData": datas,
            "aoColumns": [
                { "mDataProp": "task_name" },
                { "mDataProp": "description" },
                { "mDataProp": "users" },
                { "mDataProp": "createdBy" },
                { "mDataProp": ".startDate" },
                { "mDataProp": "endDate" },
                { "mDataProp": "sms" },
                { "mDataProp": "email" },
                { "mDataProp": "status" },
                { "mDataProp": "button" }

               

            ]
        });

    }



    function DeleteTask(id,rId) {
        if (confirm('Are You Sure! You Want to Delete This Task')) {
            $.ajax({
                url: '/api/TaskApi/' + id,
                type: 'Delete',
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    alert(data);


                    $('table#dataTables-example tr#' + rId).remove();
                    location.reload();
                },
                error: function (data) { alert(data); }
            });
        }
    }
    function UpdateTask(id) {
        $.ajax({
            async: false,
            url: '/api/TaskApi/' + id,
            type: 'PUT',
            success: function (data) {
                window.location.href = '/Task/CreateTask';
            },
            error: function () {
                alert(data);
            }
        });
    }
    function Detail(val) {
        $.ajax({
            async: false,
            url: '/api/TaskApi/' + val,
            type: 'POST',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                console.log(data);

                var uname = document.getElementById('username')
                uname.innerHTML = "";
                uname.innerHTML = uname.innerHTML + data.name;

                var useremail = document.getElementById('uemail')
                useremail.innerHTML = "";
                useremail.innerHTML = useremail.innerHTML + data.email;

                var pnum = document.getElementById('mobilenum')
                pnum.innerHTML = "";
                pnum.innerHTML = pnum.innerHTML + data.number;
            },
            error: function (data) {
                console.log(data);
            }
        });
    }

    function comments(id) {
        console.log(id);
        $.ajax({
            async: false,
                     url: '/api/messageApi/' + id,
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                window.location.href = '/message/ViewMessage';
            },
            error: function () { console.log("Code Not Ok!"); }
        });
    }

</script>