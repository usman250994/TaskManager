</style>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Task/Ticket Conversation</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Task View
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table" style="font-size:15px;">
                                <tbody>
                                    <tr>
                                        <td>Ticket/Task No.</td>
                                        <td id="ticketno"></td>
                                    </tr>
                                    <tr>
                                        <td>Ticket/Task Name(POC)</td>
                                        <td id="taskname"></td>
                                    </tr>
                                    <tr>
                                        <td>Customer Code</td>
                                        <td id="custid"></td>
                                    </tr>
                                    <tr>
                                        <td>Customer Name</td>
                                        <td id="custname"></td>
                                    </tr>
                                    <tr>
                                        <td>Project Name </td>
                                        <td id="pname"></td>
                                    </tr>
                                    <tr>
                                        <td>Description</td>
                                        <td id="Description"></td>
                                    </tr>
                                    <tr>
                                        <td>Start Date</td>
                                        <td id="StartDate"></td>
                                    </tr>
                                    <tr>
                                        <td>End Date</td>
                                        <td id="EndDate"></td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td id="email"></td>
                                    </tr>
                                    <tr>
                                        <td>SMS</td>
                                        <td id="sms"></td>
                                    </tr>
                                    <tr>
                                        <td>Assigned To</td>
                                        <td id="assign"></td>
                                    </tr>
                                    <tr>
                                        <td>Created By</td>
