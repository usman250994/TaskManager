                    console.log("success");

                },
                error: function () { console.log("Code Not Ok!"); }
            });
        }
    }

    function statusWiseSort(id) {

        $.ajax({
            async: false,
            url: '/api/taskSortingApi/' + id,
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                filltable(data);
            },
            error: function () {

                alert('Grid Not Load');

            }
        });
    }

    function addNote() {
