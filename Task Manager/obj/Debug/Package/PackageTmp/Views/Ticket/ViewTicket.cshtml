    function filltable(datas) {

        $("#dataTables-exampletick").DataTable({
            "bDestroy": true,
            "bAutoWidth": true,
            "aaSorting": [[8, 'desc'],[9, 'desc']],
            "aaData": datas,
            "bAutoWidth": false,
            "sPaginationType": "full_numbers",
            "aoColumns": [
