    }
    function viewAll() {
        $.ajax({
            async: false,
            url: '/api/TicketApi/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                filltable(data);
            },
            error: function () {

                alert('Grid Not Load');

            }
        });
    }

</script>