@{
    ViewBag.Title = "CreateTicket";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div id="wrapper">
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="text-align:center">Create Tickets</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Create Tickets
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class=" col-lg-offset-3  col-lg-6">
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input type="hidden" id="cust_id" value="0" />
                                        <input class="form-control" type="text" name="username" id="Customername" placeholder="Example" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input type="hidden" id="cust_id" value="0" />
                                        <input class="form-control" type="email" id="TicketEmail" placeholder="abc@Example.com.pk" required="required">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Contact</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <div class="col-lg-2"><label class="abc">+92</label></div>
                                        <div class="col-lg-10"><input class="form-control" type="number" id="ticketContact" placeholder="3000245787" required="required" maxlength="10"></div>
                                        <input type="hidden" id="cust_id" value="0" />
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6 ">
                                        <label>Customer Code</label>
                                    </div>
                                    <div class="col-lg-6 ">
                                        <input class="form-control" type="number" id="custcode" placeholder="12345" onfocusout="DDL(this.value)">
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Project Name</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <select id="ProjectDropdown" class="ddlproject"></select>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Issue</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <textarea class="form-control" type="text" id="Desc" cols="22" rows="2"> </textarea>
                                    </div>
                                </div>
                                <div class="col-lg-12 spacing">
                                    <div class="col-lg-6">
                                        <label>Assigned To</label>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="dropdown">
                                            <select id="test" multiple="multiple"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-offset-6 col-lg-6 spacing">
                                    <button class="btn btn-success" value="Add" onclick="Add()" id="bc"> Create </button>
                                    <button type="reset" class="btn btn-info" onclick="location.reload();">Reset</button>
                                </div>

                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    </div>
    <!-- /#page-wrapper -->
</div>
<script type="text/javascript">

    $(document).ready(function () {
        $.ajax({
            async: false,
            url: '/api/TicketApi/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                dropDown = data;
            },
            error: function () { alert('Data Not Showing'); }
        });
    });

    function DDL(val) {
        var xyz = $('#ProjectDropdown');
        xyz.empty();
        for (var i = 0; i < dropDown.length; i++) {
            if (dropDown[i].customerId == val) {
                for (var j = 0; j < dropDown[i].projects.length; j++) {
                    $('#ProjectDropdown').append($('<option></option>').val(dropDown[i].projects[j].id).html(dropDown[i].projects[j].name));
                }

            }
        }
    }

    function Add() {
        var uname = document.getElementById("Customername").value.trim();
        var email = document.getElementById("TicketEmail").value.trim();
        var pnum = document.getElementById("ticketContact").value.trim();
        var code = document.getElementById("custcode").value.trim();
        var project = document.getElementById("ProjectDropdown").value.trim();
        var issue = document.getElementById("Desc").value.trim();
        if (uname == "") { alert("Please enter User Name"); }
        else if (validateEmail(email) == false) { alert("Please enter Email"); }
        else if (pnum == "" || pnum.length != 10) { alert("Please enter Mobile Number"); }
        else if (code == "") { alert("Please enter Customer Code"); }
        else if (issue == "") { alert("Please Enter the issue"); }
        else
        {
            var model = { name: $("#Customername").val(), email: $("#TicketEmail").val(), contact: $("#ticketContact").val(), customerId: $("#custcode").val(), projectId: $("#ProjectDropdown").val(), issue: $("#Desc").val() };
            console.log(model);
            $.ajax({
                async: false,
                url: '/api/TicketApi/',
                type: 'PUT',
                data: JSON.stringify(model),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    alert(data);
                    location.reload();
                },
                error: function () {
                    alert(data);
                }
            });
        }
    }

</script>