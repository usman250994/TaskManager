@{
    ViewBag.Title = "CreateCustomer";
    Layout = "~/Views/Shared/_Home.cshtml";
}
<div id="wrapper">
    <!-- Navigation -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="text-align:center">Create Customer</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Create Customer
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class=" col-lg-offset-3  col-lg-6">
                              

                                    <div class="col-lg-12 spacing">
                                        <div class="col-lg-6 ">
                                            <label>Customer Name</label>
                                        </div>
                                        <div class="col-lg-6 ">
                                            <input class="form-control" type="text" name="Customername" id="Customername" placeholder="John Dalton" required="required">
                                        </div>
                                    </div>
                                    <div class="col-lg-offset-6 col-lg-6 spacing">
                                        <button class="btn btn-success" value="Add" onclick="Add()" id="bc"> Create </button>
                                        <button type="reset" class="btn btn-info">Reset</button>
                                    </div>
                            
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
</div>
<script type="text/javascript">
    //add user button press for adding or updating db
    //need correction when updating probably
    function Add() {
        var model = { customer_name: $("#Customername").val() };
        console.log(model);
        $.ajax({
            url: 'http://localhost:51525/api/CustomerApi/',
            type: 'POST',
            data: JSON.stringify(model),
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert('Customer Added');
                location.reload();
            },
            error: function () { alert('Customer not Added'); }
        });
    }
</script>